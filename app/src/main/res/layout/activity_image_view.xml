<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ImageViewActivity">

    <ImageView
        android:id="@+id/dogImageView"
        android:layout_centerInParent="true"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:contentDescription="Dog Image" />

    <TextView
        android:id="@+id/dog_breed_name"
        android:layout_width="wrap_content"
        android:textSize="18sp"
        tools:text="Hound"
        android:textColor="@color/black"
        android:gravity="center_horizontal"
        android:layout_alignStart="@id/dogImageView"
        android:layout_alignEnd="@id/dogImageView"
        android:layout_marginTop="20dp"
        android:layout_below="@id/dogImageView"
        android:layout_height="wrap_content"/>

</RelativeLayout>